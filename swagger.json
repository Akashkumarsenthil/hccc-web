    "/account": {
      "get": {
        "tags": [
          "accounts"
        ],
        "summary": "Retrieve accounts from the system",
        "operationId": "getAccounts",
        "parameters": [
          {
            "$ref": "#/parameters/Content-Type"
          },
          {
            "$ref": "#/parameters/Accept"
          },
          {
            "$ref": "#/parameters/Account-Id"
          },
          {
            "name": "accountId",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "If a accountId is passed in query string, the results will be filtered by accounts user name"
          },
          {
            "name": "phoneNumber",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "If a phone number is passed in query string, the results will be filtered by accounts mobile number"
          }
        ],
        "responses": {
          "200": {
            "description": "Success - List of items returned in the response payload",
            "schema": {
              "$ref": "#/definitions/RetrieveAccountsListResponse"
            }
          },
          "400": {
            "$ref": "#/responses/400ErrorResponse"
          },
          "403": {
            "$ref": "#/responses/403ErrorResponse"
          },
          "404": {
            "$ref": "#/responses/404ErrorResponse"
          },
          "500": {
            "$ref": "#/responses/500ErrorResponse"
          }
        }
      }
    },
    "/account/{accountId}/enrollments": {
