              "$ref": "#/definitions/RetrieveCoursesListResponse"
            }
          },
          "400": {
            "$ref": "#/responses/400ErrorResponse"
          },
          "500": {
            "$ref": "#/responses/500ErrorResponse"
          }
        }
      },
      "post": {
        "tags": [
          "courses"
        ],
