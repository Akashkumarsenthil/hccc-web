          "200": {
            "description": "Success - Item returned in the response payload",
            "schema": {
              "$ref": "#/definitions/RetrieveCourseResponse"
            }
          },
          "400": {
            "$ref": "#/responses/400ErrorResponse"
          },
          "403": {
            "$ref": "#/responses/403ErrorResponse"
          },
          "500": {
            "$ref": "#/responses/500ErrorResponse"
          }
        }
      }
    },
